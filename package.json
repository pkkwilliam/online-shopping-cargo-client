    "start-uat": "REACT_APP_SERVICE_URL=https://oscm-uat-api.bitcode.mo react-scripts start",
    "build": "REACT_APP_SERVICE_URL=https://picktb.com/api react-scripts build",
    "build-prod": "REACT_APP_SERVICE_URL=https://picktb-api.bitcode.mo react-scripts build",
